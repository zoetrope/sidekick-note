# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                         controllers.Application.main(title="")

POST        /api/login                controllers.Application.authenticate
GET         /api/logout               controllers.Application.logout
GET         /api/loggedin             controllers.Application.loggedin

GET         /api/items                controllers.ItemController.items(page:Int ?=1)
POST        /api/items                controllers.ItemController.newItem

GET         /api/items/search         controllers.ItemController.search(words:String)

GET         /api/quick_notes          controllers.QuickNoteController.getQuickNotes(page:Int ?=1)
POST        /api/quick_notes          controllers.QuickNoteController.addQuickNote

GET         /api/tasks                controllers.TaskController.getTasks(page:Int ?=1)
POST        /api/tasks                controllers.TaskController.addTask
PUT         /api/tasks/:id            controllers.TaskController.updateTask(id:Int)

GET         /api/tags                 controllers.TagController.getTags


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)
GET         /*any                     controllers.Application.main(any)