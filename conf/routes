# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                              application.Application.main(title="")

POST        /api/login                     application.Application.authenticate
GET         /api/logout                    application.Application.logout
GET         /api/loggedin                  application.Application.loggedin

GET         /api/items/search              item.ItemController.search(page:Int ?=1, words: String ?= "", tags: String ?= "")
GET         /api/items/count               item.ItemController.count(words: String ?= "", tags: String ?= "")

GET         /api/quick_notes               quick_note.QuickNoteController.all(page:Int ?=1)
POST        /api/quick_notes               quick_note.QuickNoteController.create
GET         /api/quick_notes/search        quick_note.QuickNoteController.search(page: Int ?=1, words: String ?= "", tags: String ?= "")
GET         /api/quick_notes/count         quick_note.QuickNoteController.count(words: String ?= "", tags: String ?= "")
GET         /api/quick_notes/:id           quick_note.QuickNoteController.get(id:Long)
PUT         /api/quick_notes/:id           quick_note.QuickNoteController.update(id:Long)

GET         /api/tasks                     task.TaskController.all(page:Int ?=1)
POST        /api/tasks                     task.TaskController.create
GET         /api/tasks/search              task.SearchTaskController.search(page: Int ?=1, tags: String ?= "", status: String ?= "", dueDate: String ?= "")
GET         /api/tasks/fullsearch          task.TaskController.search(page: Int ?=1, words: String ?= "", tags: String ?= "")
GET         /api/tasks/count               task.TaskController.count(words: String ?= "", tags: String ?= "")
GET         /api/tasks/:id                 task.TaskController.get(id:Long)
PUT         /api/tasks/:id                 task.TaskController.update(id:Long)

GET         /api/articles                  article.ArticleController.all(page:Int ?=1)
POST        /api/articles                  article.ArticleController.create
GET         /api/articles/search           article.ArticleController.search(page: Int ?=1, words: String ?= "", tags: String ?= "")
GET         /api/articles/titles           article.ArticleController.allTitles
GET         /api/articles/:id              article.ArticleController.get(id:Long)
PUT         /api/articles/:id              article.ArticleController.update(id:Long)

GET         /api/tags                      tag.TagController.getTags

GET         /api/migration/quick_notes     migration.MigrationController.getQuickNotes
GET         /api/migration/tasks           migration.MigrationController.getTasks
GET         /api/migration/articles        migration.MigrationController.getArticles

GET         /api/search_criteria/:target   search_criterion.SearchCriterionController.all(target: String)
POST        /api/search_criteria/:target   search_criterion.SearchCriterionController.create(target: String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.at(path="/public", file)
GET         /*any                          application.Application.main(any)