# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                              controllers.Application.main(title="")

POST        /api/login                     controllers.Application.authenticate
GET         /api/logout                    controllers.Application.logout
GET         /api/loggedin                  controllers.Application.loggedin

GET         /api/quick_notes               controllers.QuickNoteController.all(page:Int ?=1)
POST        /api/quick_notes               controllers.QuickNoteController.create
GET         /api/quick_notes/search        controllers.QuickNoteController.search(words: String ?= "", tags: String ?= "")
PUT         /api/quick_notes/:id           controllers.QuickNoteController.update(id:Int)

GET         /api/tasks                     controllers.TaskController.all(page:Int ?=1)
POST        /api/tasks                     controllers.TaskController.create
GET         /api/tasks/search              controllers.TaskController.search(words: String ?= "", tags: String ?= "")
PUT         /api/tasks/:id                 controllers.TaskController.update(id:Int)

GET         /api/articles                  controllers.ArticleController.all(page:Int ?=1)
POST        /api/articles                  controllers.ArticleController.create
GET         /api/articles/search           controllers.ArticleController.search(words: String ?= "", tags: String ?= "")
GET         /api/articles/titles           controllers.ArticleController.allTitles
GET         /api/articles/:id              controllers.ArticleController.get(id:Int)
PUT         /api/articles/:id              controllers.ArticleController.update(id:Int)

GET         /api/tags                      controllers.TagController.getTags


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.at(path="/public", file)
GET         /*any                          controllers.Application.main(any)